<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Storage permissions (compatibility for different Android versions) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="29" />
    
    <!-- Android 13+ permissions -->
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />

    <!-- Speech Recognition feature -->
    <uses-feature
        android:name="android.hardware.microphone"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CatatIn"
        tools:targetApi="31">
        
        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.CatatIn">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Voice Note Activity -->
        <activity
            android:name=".ui.VoiceNoteActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Notes Activity -->
        <activity
            android:name=".ui.NotesActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Todo List Activity -->
        <activity
            android:name=".ui.ToDoListActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Finance Activity -->
        <activity
            android:name=".ui.FinanceActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

    </application>

</manifest>