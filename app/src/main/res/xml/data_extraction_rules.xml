<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- By default, all files are backed up. You can exclude specific files or directories -->
        <exclude domain="file" path="private/" />
        <exclude domain="database" path="sensitive.db" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Transfer all files except sensitive ones -->
        <exclude domain="file" path="private/" />
        <exclude domain="database" path="sensitive.db" />
    </device-transfer>
</data-extraction-rules>